    <formulas>
        <name>formAppointmentType</name>
        <dataType>String</dataType>
        <expression>IF(CONTAINS({!$Record.Name},&apos;Advisory&apos;), &apos;Advisory&apos;,
IF(CONTAINS({!$Record.Name},&apos;Discovery&apos;), &apos;Advisory&apos;,
IF(CONTAINS({!$Record.Name},&apos;Tax Return&apos;), &apos;Tax Compliance&apos;,
IF(CONTAINS({!$Record.Name},&apos;Payroll&apos;), &apos;Payroll&apos;,
IF(CONTAINS({!$Record.Name},&apos;Bookkeeping&apos;), &apos;Bookkeeping&apos;,
null)))))</expression>
    </formulas>
    <formulas>
        <name>formContactID</name>
