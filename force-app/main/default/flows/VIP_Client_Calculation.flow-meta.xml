        <name>VIPThreshold</name>
        <dataType>Currency</dataType>
        <value>
            <numberValue>5000.0</numberValue>
        </value>
    </constants>
    <decisions>
        <name>Is_VIP</name>
        <label>Is VIP?</label>
        <locationX>182</locationX>
        <locationY>768</locationY>
        <defaultConnector>
            <targetReference>No_VIP</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>TotalInvoiced</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>VIPThreshold</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Yes_VIP</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <name>Most_Recent_Payment_Date</name>
        <label>Most Recent Payment Date</label>
        <locationX>380</locationX>
        <locationY>252</locationY>
        <defaultConnectorLabel>Neither</defaultConnectorLabel>
        <rules>
            <name>Payment_Made_Today_or_12_Months_Ago</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ChargeOver_Most_Recent_Payment_Date__c</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>Yesterday</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.ChargeOver_Most_Recent_Payment_Date__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>TwelveMonthsAgo</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Invoices</targetReference>
            </connector>
            <label>Payment Made Today or 12 Months Ago</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>TwelveMonthsAgo</name>
